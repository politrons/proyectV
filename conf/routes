# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                     controllers.BaseController.index
GET        /selectCountry        controllers.BaseController.selectCountry
GET        /discography          controllers.AppleController.discography
GET        /application          controllers.AppleController.application
GET        /movie                controllers.AppleController.movie
GET        /games                controllers.SteamController.games
GET        /gameDetails          controllers.SteamController.gameDetails

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file         controllers.Assets.at(path="/public", file)

